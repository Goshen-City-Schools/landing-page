---
// import Layout from "../layouts/Layout.astro";
import Layout from "../layouts/Layout.astro";
import FlippableGridView from "../components/shared/FlippableGridView.astro";
import TestimonialCard from "../components/cards/TestimonialCard.astro";
import { Image } from "astro:assets";
import Navigator from "../components/shared/Navigator.astro";
import Indicator from "../components/shared/Indicator.astro";
import GalleryCard from "../components/cards/GalleryCard.astro";
import Button from "../components/shared/Button.astro";
import AboutSection from "../components/shared/AboutSection.astro";
import CTASection from "../components/sections/CTASection.astro";
import NewsSection from "../components/sections/NewsSection.astro";
---

<Layout activeNav="/">
  <main class="">
    <!-- Hero  -->

    <section class="hero relative grid w-full h-[70vh]">
      <div
        class="container gap-8 px-8 sm:px-4 items-center grid sm:grid-cols-7 h-full overflow-hidden"
      >
        <div class="bgI sm:hidden absolute h-full"></div>
        <!-- Write-up -->
        <div
          class="sm:col-span-4 relative sm:text-gray-700 grid sm:prose-lg prose items-center"
        >
          <h1
            class="relative sm:text-6xl !mb-2 sm:mb-auto text-white sm:text-gray-900"
          >
            Empowering Every Child's Potential

            <div class="absolute -bottom-20 right-4">
              <img
                src="/hero-touch-2.png"
                height="48"
                width="48"
                alt=""
                class="!border-none"
              />
            </div>
          </h1>

          <div class="block w-[70%] -my-8 -mb-10">
            <img src="/hero-touch-1.png" alt="" class="!border-none" />
          </div>

          <p class="text-white sm:text-gray-900">
            Let your child become part of a supportive community where students,
            teachers, and parents collaborate to create a nurturing environment
            that fosters both academic success and personal growth.
          </p>
          <!-- todo: add link to portal -->
          <a href="/contact-us" class="!no-underline">
            <Button
              text="Enrol Today"
              iconName="arrow-right"
              color="purple"
            /></a
          >
        </div>

        <!-- Illustration -->
        <div
          class="sm:col-start-5 hidden sm:grid sm:col-end-8 relative h-full w-full"
        >
          <Image
            height={600}
            width={600}
            class={"absolute top-0 h-full w-full object-contain"}
            src={"/hero-img.png"}
            alt={"Goshen City and Stars Group of Schools"}
          />
        </div>
      </div>
    </section>

    <!-- Schooling Categories -->

    <section class="bg-blue-950 py-12 sm:py-20 px-6 sm:px-0">
      <div class="container w-full text-white">
        <div
          class="grid grid-cols-2 sm:grid-cols-4 sm:space-x-4 space-y-8 sm:space-y-0 sm:divide-x-2"
        >
          <div
            class="flex flex-col px-2 sm:px-3 prose w-full reveal fade-bottom justify-center items-center text-center gap-2"
          >
            <h3 class="not-italic text-white text-2xl">Creche</h3>
            <p>Foundational care and development for infants and toddlers.</p>
          </div>

          <div
            class="flex flex-col px-2 sm:px-3 prose w-full reveal fade-bottom justify-center items-center text-center gap-2"
          >
            <h3 class="not-italic text-white text-2xl">Nursery</h3>
            <p>
              Early literacy and numeracy skills, creative expression through
              art and play, and basic social skills.
            </p>
          </div>

          <div
            class="flex flex-col px-2 sm:px-3 prose w-full reveal fade-bottom justify-center items-center text-center gap-2"
          >
            <h3 class="not-italic text-white text-2xl">Basic</h3>
            <p>
              Students develop foundational academic skills, critical thinking,
              and problem-solving abilities.
            </p>
          </div>
          <div
            class="flex flex-col px-2 sm:px-3 prose w-full reveal fade-bottom justify-center items-center text-center gap-2"
          >
            <h3 class="not-italic text-white text-2xl">Secondary</h3>
            <p>
              The curriculum is more specialized and we prepare students for
              higher education & Career paths.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- About Us -->

    <section class="bg-gray-100 mt-16 sm:mt-20 mb-12 sm:mb-24 sm:py-24 py-12">
      <AboutSection title="ABOUT US" classes="container mb-12  px-6 sm:px-0 " />

      <div class="illustation-image__about sm:h-[52vh] h-[320px] mb-16"></div>

      <div class="container flex flex-col gap-2 px-6 sm:px-0">
        <div
          class="prose max-w-6xl prose-headings:mb-3 sm:prose-lg mb-12 text-gray-800 w-full reveal fade-bottom"
        >
          <h2 class="!mb-10">Welcome to Goshen Group of Schools</h2>

          <p class="text-gray-800">
            In our School, each day is a new opportunity for discovery,
            learning, and growth. At our school, we foster a vibrant community
            dedicated to nurturing young minds, cultivating a love for
            knowledge, and preparing students for a future of limitless
            possibilities. Students at our schools will experience significant
          </p>
        </div>

        <a href="/about">
          <Button text="Learn more" iconName="arrow-right" color="purple" /></a
        >

        <div
          class="container prose prose-h2:text-4xl prose-p:text-lg p-8 sm:p-12 bg-purple-700 max-w-none sm:mt-24 mt-16 sm:rounded-3xl rounded-2xl w-full"
        >
          <h2 class="text-white">Our Mission</h2>
          <p>
            Fostering a culture of character, learning, and career readiness. We
            strive to provide an enriching educational experience that not only
            equips students with the knowledge for future careers but also
            instills the values and skills necessary for lifelong success.
          </p>
        </div>
      </div>
    </section>

    <!-- Why Choose Us -->

    <section class="reveal sm:py-24 py-12 px-6 sm:px-0">
      <AboutSection
        classes="container mb-4"
        title={"Why choose us"}
        subtitle="Here's What make us Unique!"
      />

      <div class="container sm:px-0 space-y-6">
        <FlippableGridView
          title="We focus on Character Development"
          imgSrc="https://res.cloudinary.com/dx9rpvjcw/image/upload/v1704672071/gallery/nlhji6z2asff6dithggc.jpg"
          content={[
            "We place a strong emphasis on character education, instilling values like respect, responsibility, and integrity to help shape your child into a compassionate and principled individual.",
          ]}
        />
        <FlippableGridView
          isReverse="true/"
          title="Innovative Technology Integration"
          imgSrc="https://res.cloudinary.com/dx9rpvjcw/image/upload/v1704672071/gallery/agc5alfv8bfi9rg8syos.jpg"
          content={[
            "In addidtion to traditional teaching methods, we also use technology to make learning more interesting and help students think better",
            "We provide our children with adequate learning materials in spacious classrooms and the engagement of well trained and highly motivated teachers and teaching assistants, every child is encouraged to bring out his/her best.",
          ]}
        />
        <FlippableGridView
          title="Blended Curriculum"
          content={[
            "At Goshen City Schools, our curriculum is a blend of the Nigerian National Basic Education curriculum and that of schools in the UK. We strongly believe that this unique blend will give your child the right foundation to face the future in the global village which the world has become in recent times. by pocessing these skills, they would be able to fit into any society where they find themselves in the future.",
          ]}
        />
        <FlippableGridView
          isReverse="true/"
          title="State-of-the-art Facilities"
          imgSrc="https://res.cloudinary.com/dx9rpvjcw/image/upload/v1704672072/gallery/rwrmjpgva96wdsvanvly.jpg"
          content={[
            "We have made sure that our science laboratories are well equipped. These include Chemistry, Physics, and Biology laboratories, alongside our facilities including Technology Workshop, Art Studio, Language room and all other essential amenity rooms.",
          ]}
        />
      </div>
    </section>

    <!-- Gallery-->

    <section
      class="relative grid items-center overflow-hidden mb-12 sm:mb-24 sm:py-24 py-12 bg-gray-50 mt-12"
    >
      <div class="container flex justify-between items-end px-6 sm:px-0">
        <AboutSection
          title="GALLERY"
          subtitle="Take a Virtual Tour of our School"
        />
        <!-- Gallery arrow Navigation -->
        <div class="arrows flex gap-3">
          <Navigator direction="left" isActive="true" />

          <Navigator direction="right" />
        </div>
      </div>

      <div class="grid grid-cols-3 h-[76vh] items-center">
        <GalleryCard
          imgSrc={"https://res.cloudinary.com/dx9rpvjcw/image/upload/v1703929914/banners/ucqolrijlkrtybbizbkn.jpg"}
        />
        <GalleryCard
          imgSrc={"https://res.cloudinary.com/dx9rpvjcw/image/upload/v1704674300/gallery/u3xkvrzrhxnyrmyfxpsj.jpg"}
        />
        <GalleryCard
          imgSrc={"https://res.cloudinary.com/dx9rpvjcw/image/upload/v1703929914/banners/ucqolrijlkrtybbizbkn.jpg"}
        />
      </div>

      <div class="container grid justify-center gap-12">
        <div class="flex gap-2 justify-center">
          <Indicator />
          <Indicator isActive />
          <Indicator />
        </div>

        <a href="/gallery">
          <Button text="View All" iconName="arrow-right" color="purple" /></a
        >
      </div>

      <!--
        <div
        class="absolute left-[50%] translate-x-[-50%] top-[50%] translate-y-[-30%] image-display h-[60vh] w-[85vh]"
      >
        <div
          class="relative h-full w-full overflow-hidden rounded-[48px] shadow-sm"
        >
          <Image
            class={"imgContainer object-cover"}
            height={1080}
            width={1080}
            alt={"Goshen Founder"}
            src={"https://res.cloudinary.com/dx9rpvjcw/image/upload/v1703929914/banners/ucqolrijlkrtybbizbkn.jpg"}
          />
        </div>
      </Button> -->
    </section>

    <!-- Founders / Director Speech -->

    <section class="mb-12 sm:mb-24 sm:py-8 py-6 px-6 sm:px-0">
      <AboutSection
        title="FOUNDER/DIRECTORS"
        subtitle="Meet Our Director"
        classes="container mb-12"
      />

      <div
        class="container reveal fade-bottom flex flex-col sm:flex-row gap-4 items-center sm:gap-8"
      >
        <div
          class="w-[320px] sm:w-[38%] h-[320px] sm:h-[400px] sm:rounded-3xl rounded-2xl overflow-hidden flex-shrink-0 relative"
        >
          <Image
            class={"absolute h-full w-full object-cover"}
            height={300}
            width={300}
            alt={"Goshen Founder"}
            src="https://res.cloudinary.com/dx9rpvjcw/image/upload/v1704672071/gallery/ph9jx4mtoixehuvdt31t.jpg"
          />
        </div>

        <div
          class="flex flex-col prose prose-headings:my-0 prose-p:text-gray-600"
        >
          <h2>
            "Train up a child in the way he should go and when he is old, he
            will not depart from it."
          </h2>
          <p class="font-bold !text-xl !mb-0 mt-2">Proverbs 22:6</p>

          <p
            class="text-gray-700 sm:line-clamp-7 line-clamp-5 prose !mb-0 max-w-none"
          >
            As a household word that is strategically balanced within our
            Nation’s educational system, Goshen City and Goshen Stars Global
            College is a brand name that has sprung to limelight within a couple
            of years ago, and indeed a dream come through. As a brand name that
            implies to sparkle, shine, glitter, or appear bright, the idea of
            naming the academy “Goshen City and Stars” by the founder of the
            academy was not accidental.The initiative to set up this Academy was
            I believe, as a result of the explosive rapid changes within the
            social structures of the society in which we live.
          </p>

          <a
            href="/about#director-speech"
            class="font-bold mb-4 mt-2 text-lg flex text-purple-500 underline-offset-4 underline py-0"
            >Read More
          </a>

          <div class="flex flex-col">
            <h2 class="font-bold !text-xl sm:text-inherit">
              OKAKE, IFEOMA CHINWE
            </h2>
            <small>Director/Founder</small>
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonials -->

    <section class="reveal bg-purple-100 sm:py-24 py-12 px-6 sm:px-0">
      <div class="container mb-16 flex justify-between items-end">
        <AboutSection
          title="TESTIMONIES"
          subtitle="What Parents Say about Us"
        />

        <!-- Testimonies Navigation arrows -->
        <div class="arrows flex gap-3">
          <Navigator direction="left" />

          <Navigator direction="right" isActive="true" />
        </div>
      </div>
      <div class="container grid sm:grid-cols-2 gap-4 sm:gap-8">
        <TestimonialCard classes="reveal fade-left" />
        <TestimonialCard classes="reveal fade-right" />
      </div>

      <div class="mt-16 flex gap-2 justify-center">
        <Indicator />
        <Indicator />
        <Indicator isActive />
        <Indicator />
        <Indicator />
      </div>
    </section>
  </main>

  <!-- News and Updates -->

  <NewsSection size="3" />

  <!-- CTA -->

  <CTASection />
</Layout>

<style>
  .illustation-image__about {
    background-image: url("https://res.cloudinary.com/dx9rpvjcw/image/upload/v1704672717/gallery/i7bakvtrj1pippjdubsp.jpg");
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center center;
  }
  .prose {
    max-width: none;
  }

  .bgI {
    background-image: url("https://res.cloudinary.com/dx9rpvjcw/image/upload/v1703928891/banners/q8e1017bw0v3owa8gwh7.jpg");
    background-repeat: no-repeat;
    background-size: cover;
    background-position: bottom bottom;
    background-color: #090808bc;
    background-blend-mode: overlay;
    @apply h-full w-full left-0 top-0 -z-40;
  }
</style>

  </main>

  <!-- News and Updates -->

  <NewsSection />

  <!-- CTA -->

  <CTASection />
</Layout>

<style>
  .illustation-image__about {
    background-image: url("https://res.cloudinary.com/dx9rpvjcw/image/upload/v1704672717/gallery/i7bakvtrj1pippjdubsp.jpg");
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center center;
  }
  .prose {
    max-width: none;
  }

  .bgI {
    background-image: url("https://res.cloudinary.com/dx9rpvjcw/image/upload/v1703928891/banners/q8e1017bw0v3owa8gwh7.jpg");
    background-repeat: no-repeat;
    background-size: cover;
    background-position: bottom bottom;
    background-color: #090808bc;
    background-blend-mode: overlay;
    @apply h-full w-full left-0 top-0 -z-40;
  }
</style>

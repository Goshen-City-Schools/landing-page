          <div class="flex flex-col">
            <h2 class="font-bold">OKAKE, IFEOMA CHINWE</h2>
            <small>Director/Founder</small>
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonials -->

    <section class="bg-purple-100 py-24">
      <div class="container mb-12 flex justify-between items-end">
        <div class="">
          <p class="text-purple-700 font-bold tracking-wide mb-5">
            TESTIMONIES
          </p>
          <h3 class="text-lg font-bold">What Parents Say about Us</h3>
        </div>

        <!-- Testimonies Navigation arrows -->
        <div class="arrows flex gap-3">
          <div
            class="h-12 w-12 bg-purple-100 text-gray-500 rounded-full grid place-items-center"
          >
            <Icon name={"mdi:arrow-left"} />
          </div>
          <div
            class="h-12 w-12 bg-purple-500 text-white rounded-full grid place-items-center"

        <div class="imgContainer h-[350px] w-full">
          <Image
            src={"https://res.cloudinary.com/dx9rpvjcw/image/upload/v1703929914/banners/ucqolrijlkrtybbizbkn.jpg"}
            height={320}
            width={320}
            alt={"Goshen Gallery Images Preview"}
            class={"img object-cover"}
          />
        </div>
      </div>

      <div
        class="absolute left-[50%] translate-x-[-50%] top-[50%] translate-y-[-30%] image-display h-[60vh] w-[85vh]"

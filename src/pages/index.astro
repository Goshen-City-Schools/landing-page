    <!-- Why Choose Us -->

    <section class="py-8">
      <div class="container mb-4">
        <p class="text-purple-700 font-bold tracking-wide mb-5">
          WHY CHOOSE US
        </p>
        <h3 class="text-lg font-bold">Here's What make us Unique!</h3>
      </div>

      <div class="container px-12 space-y-6">
        <FlippableGridView />
        <FlippableGridView isReverse="true/" />

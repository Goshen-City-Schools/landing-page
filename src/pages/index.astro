    <!-- Founders / Director Speech -->

    <section class="py-8 pb-24">
      <div class="container mb-12">
        <p class="text-purple-700 font-bold tracking-wide mb-5">
          FOUNDER/DIRECTORS
        </p>
        <h3 class="text-lg font-bold">Meet Our Director</h3>
      </div>

      <div class="container flex gap-4 items-center sm:gap-8">
        <div
          class="w-[38%] h-[400px] rounded-3xl overflow-hidden flex-shrink-0 relative"
        >
          <Image
            class={"absolute h-full w-full object-cover"}
            height={300}
            width={300}
            alt={"Goshen Founder"}
            src={"https://res.cloudinary.com/dx9rpvjcw/image/upload/v1703929914/banners/ucqolrijlkrtybbizbkn.jpg"}
          />
        </div>

        <div class="">
          <div class="flex flex-col gap-1 prose">
            <h2>
              "Train up a child in the way he should go and when he is old, he
              will not depart from it."
            </h2>
            <span class="font-bold">Proverbs 22:6</span>
          </div>

          <p class="text-gray-700 line-clamp-7 prose mb-3">
            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Rem

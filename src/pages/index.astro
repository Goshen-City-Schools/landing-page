      </div>
    </section>

    <!-- Gallery-->

    <section class="py-8 relative h-[88vh] grid items-center">
      <div class="container mb-12 flex justify-between items-end">
        <div class="">
          <p class="text-purple-700 font-bold tracking-wide mb-5">GALLERY</p>
          <h3 class="text-lg font-bold">Take a Virtual Tour of our School</h3>
        </div>
        <!-- Gallery arrow Navigation -->
        <div class="arrows flex gap-3">
          <div
            class="h-12 w-12 bg-purple-100 text-gray-500 rounded-full grid place-items-center"
          >
            <Icon name={"mdi:arrow-left"} />
          </div>
          <div
            class="h-12 w-12 bg-purple-500 text-white rounded-full grid place-items-center"
          >
            <Icon name={"mdi:arrow-right"} />
          </div>
        </div>
      </div>
      <div class="grid grid-cols-3">
        <div class="imgContainer h-[350px] w-full">
          <Image
            src={"https://res.cloudinary.com/dx9rpvjcw/image/upload/v1703929914/banners/ucqolrijlkrtybbizbkn.jpg"}

---
import { SITE } from "../config";
import { Icon } from "astro-icon/components";
import Logo from "./shared/Logo.astro";
import dayjs from "dayjs";
---

<footer class="px-4 py-12 sm:py-16">
  <div class="container">
    <div class="grid mb-12 sm:grid-cols-4 gap-12 sm:gap-6">
      <!-- Column 1 -->
      <div class="sm:col-span-2 sm:max-w-sm pr-4 flex flex-col gap-4 md:gap-6">
        <!-- School logo -->
        <Logo />

        <!-- School Location -->
        <a href={SITE.location.link} class="flex gap-4">
          <Icon
            class={"text-orange-100"}
            size={28}
            name={"mdi:location-outline"}
          />

          <p>{SITE.location.address}</p>
        </a>

        <!-- School Phone Number -->
        <a href=`mailto:${SITE.email}` class="flex gap-4">
          <Icon
            class={"text-orange-100"}
            size={24}
            name={"mdi:phone-outline"}
          />

          <p>08036960509</p>
        </a>

        <!-- School Email -->
        <a href=`mailto:${SITE.email}` class="flex gap-4">
          <Icon
            class={"text-orange-100"}
            size={24}
            name={"mdi:envelope-outline"}
          />

          <p>{SITE.email}</p>
        </a>
      </div>

      <!-- Column 2 - Quick Links -->
      <div class="flex flex-col gap-4 sm:gap-6">
        <h3 class="font-bold sm:mb-4">Quick links</h3>

        <nav class="flex flex-col space-y-2">
          <a href="/">Home</a>
          <a href="/about">About us</a>
          <a href="/news">News and Updates</a>
          <a href="/gallery">Gallery</a>

          <a
            href="https://goshen-portal.vercel.app/"
            target="_blank"
            rel="noopener noreferrer">Portal</a
          >
        </nav>
      </div>

      <!-- Column 3 - Follow us -->
      <div class="flex flex-col gap-4 md:gap-6">
        <h3 class="font-bold sm:mb-4">Follow Us</h3>

        <nav class="flex sm:flex-col items-center sm:items-start gap-4">
          <a href="" class="text-[24px]">
            <Icon class={"text-3xl"} name={"mdi:facebook"} />
          </a>
          <a href=""> <Icon class={"text-3xl"} name={"mdi:twitter"} /></a>
          <a href=""> <Icon class={"text-3xl"} name={"mdi:linkedin"} /></a>
        </nav>
      </div>
    </div>
    <small class="text-center block">
      Copyright &copy; {dayjs().year()}. Goshen Group of Schools . All Rights
      Reserved
    </small>
  </div>
</footer>

<style>
  footer {
    background: rgb(138, 18, 191);
    background: linear-gradient(
      90deg,
      rgba(138, 18, 191, 1) 0%,
      rgba(20, 9, 130, 1) 49%,
      rgba(39, 28, 128, 1) 100%
    );
    color: white;
  }

  footer nav a {
    @apply hover:text-orange-400 transition;
  }
</style>

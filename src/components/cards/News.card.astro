---
import { Image } from "astro:assets";
import { motion, AnimatePresence } from "framer-motion";
---

<AnimatePresence>
  <div class="newsCard w-full max-w-sm">
    <div class="imgContainer h-[200px] shadow-sm rounded-3xl">
      <Image
        src={"https://res.cloudinary.com/dx9rpvjcw/image/upload/v1703912088/logos/fb10n60uzloadt3ay6jx.png"}
        height={320}
        width={320}
        class={"img object-cover"}
        alt={"Goshen news"}
      />
    </div>
    <div class="flex justify-between px-2">
      <small>3 hours ago</small>
      <small>4 mins read</small>
    </div>
  </div>
</AnimatePresence>

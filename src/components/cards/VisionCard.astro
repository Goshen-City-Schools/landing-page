---
import { Icon } from "astro-icon/components";

const { number, title, description } = Astro.props;
---

<div
  class="flex p-8 sm:rounded-3xl sm:flex-row flex-col justify-between text-center sm:text-left cursor-pointer rounded-2xl items-center gap-8 shadow-md hover:shadow-xl transition hover:scale-105 border-2 border-purple-600"
>
  <div
    class="flex-shrink-0 h-64 w-72 text-white bg-purple-600 sm:rounded-3xl p-8 text-center rounded-2xl flex flex-col gap-4 justify-center items-center"
  >
    <div
      class="h-16 w-16 border-2 flex-shrink-0 border-white rounded-full grid place-items-center text-xl font-bold"
    >
      0{number}
    </div>

    <h3 class="font-semibold text-xl">
      {title}
    </h3>

    <Icon name={"mdi:people"} />
  </div>

  <p class="leading-7 text-lg">
    {description}
  </p>
</div>
